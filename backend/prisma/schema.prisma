generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  emails    Email[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Email {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  fromEmail   String
  toEmail     String
  subject     String
  body        String      @db.Text

  status      EmailStatus @default(SCHEDULED)
  scheduledAt DateTime
  sentAt      DateTime?

  etherealUrl  String?    // Ethereal preview URL after send
  errorMessage String?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId, status])
  @@index([scheduledAt])
  @@index([status])
}

enum EmailStatus {
  SCHEDULED
  PROCESSING
  SENT
  FAILED
  CANCELLED
}
